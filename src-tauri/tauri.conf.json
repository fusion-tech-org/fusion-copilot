{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "FusionCopilot",
    "version": "0.1.8"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "os": {
        "all": true
      },
      "shell": {
        "all": false,
        "execute": true,
        "sidecar": false,
        "open": true,
        "scope": [
          {
            "name": "run-start-app",
            "cmd": "java",
            "args": true
          },
          {
            "name": "echo",
            "cmd": "echo",
            "args": true
          },
          {
            "name": "run-sh-file",
            "cmd": "sh",
            "args": true
          },
          {
            "name": "run-bat-file",
            "cmd": "cmd",
            "args": true
          },
          {
            "name": "run-kill-app",
            "cmd": "kill",
            "args": true
          },
          {
            "name": "run-static-server",
            "cmd": "node",
            "args": true
          },
          {
            "name": "run-git",
            "cmd": "git",
            "args": true
          }
        ]
      },
      "fs": {
        "all": true,
        "scope": [
          "$DOWNLOAD",
          "$DOWNLOAD/*",
          "$APPLOCALDATA",
          "$APPLOCALDATA/*",
          "$APPLOCALDATA/fusion-tech",
          "$APPLOCALDATA/*/*",
          "$APPLOCALDATA/**/*",
          "$APPDATA",
          "$HOME",
          "$HOME/*",
          "$HOME/**/*",
          "$DESKTOP",
          "$DESKTOP/*",
          "$RESOURCE/*",
          "$RESOURCE/lang/*",
          "$RESOURCE/scripts/*"
        ]
      },
      "path": {
        "all": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "http://localhost:4875/*",
          "http://127.0.0.1:4875/*",
          "http://0.0.0.0:4875/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "cn.fusiontech.www",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "lang/*",
        "scripts/*"
      ],
      "category": "Productivity",
      "copyright": "Â© 2023 FusionTech",
      "windows": {
        "allowDowngrades": true,
        "certificateThumbprint": null,
        "digestAlgorithm": null,
        "nsis": null,
        "timestampUrl": null,
        "tsp": false,
        "webviewFixedRuntimePath": null,
        "webviewInstallMode": {
          "silent": true,
          "type": "downloadBootstrapper"
        },
        "wix": {
          "language": [
            "zh-CN",
            "en-US"
          ]
        }
      },
      "macOS": {
        "minimumSystemVersion": "10.13",
        "exceptionDomain": "localhost"
      },
      "deb": {
        "files": {}
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": true
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "width": 1024,
        "height": 768,
        "hiddenTitle": true,
        "visible": true,
        "title": "Fusion Copilot"
      },
      {
        "width": 1024,
        "height": 768,
        "decorations": false,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "visible": false
      }
    ],
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdGMzZBODIyMTkzOUVBRTYKUldUbTZqa1pJcWcyZjQ2NmFoQXhFMG1zVVZOL1Q2TFF0dXFLeXF0dy9VdWF5aTZZeXNPZUVFNDYK",
      "windows": {
        "installMode": "passive",
        "installerArgs": []
      },
      "endpoints": [
        "https://service-lxp3bh0o-1254102905.gz.apigw.tencentcs.com/release/info/{{target}}/{{arch}}/{{current_version}}"
      ]
    }
  }
}